# Docker / GHCR
IMAGE_TAG=latest
APP_NAME=cad-hub
APP_PORT=8094

# OpenAI (optional, for LLM features)
OPENAI_API_KEY=

# Gunicorn
GUNICORN_WORKERS=2
GUNICORN_TIMEOUT=120
