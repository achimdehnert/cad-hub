# Django
DJANGO_SETTINGS_MODULE=config.settings.production
SECRET_KEY=change-me-to-a-real-secret-key
ALLOWED_HOSTS=nl2cad.de,www.nl2cad.de
DEBUG=false

# Database
POSTGRES_DB=cad_hub
POSTGRES_USER=cad_hub
POSTGRES_PASSWORD=change-me
DATABASE_URL=postgres://cad_hub:change-me@db:5432/cad_hub

# Redis / Celery
